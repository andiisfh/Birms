<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pengadaanFragment"
    android:background="@drawable/background">

    <Button
        android:id="@+id/all_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="72dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/background"
        android:text="All"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btn_perencanaan"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="73dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/all_btn"
        android:background="@drawable/background"
        android:text="Perencanaan"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btn_aktif"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/btn_perencanaan"
        android:layout_marginTop="73dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background"
        android:text="Aktif"
        android:textSize="10dp"
        />
    <Button
        android:id="@+id/btn_gagal"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/btn_aktif"
        android:layout_marginTop="73dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background"
        android:text="gagal"
        android:textSize="10dp"
        />

    <Button
        android:id="@+id/btn_selesai"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/btn_gagal"
        android:layout_marginTop="73dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background"
        android:text="Selesai"
        android:textSize="10dp"
        />


</RelativeLayout>