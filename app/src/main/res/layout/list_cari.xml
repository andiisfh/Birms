<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp">

    <ImageView
        android:background="@drawable/pohon"

        android:id="@+id/gambar_Project"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp" />
    <TextView
        android:id="@+id/tv_judul_Project"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word Bank Mengapresiasi BIRMS"
        android:layout_marginLeft="80dp"
        android:textColor="#F000"/>
    <TextView
        android:id="@+id/tv_deskripsi_project"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text= "SKPD - Rumah Sakit Umum Daerah Kota Bandung"
        android:textSize="10dp"
        android:layout_marginLeft="80dp"
        />
    <ImageView
        android:id="@+id/tanggal_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/gambar_Project"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/tanggal"/>

    <TextView
        android:id="@+id/re"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rencana Pengadaan : "
        android:textSize="10dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:id="@+id/tv_tanggal_pengadaan"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01-04-2018"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"/>
    <ImageView
        android:id="@+id/klarifikasi_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/list"/>
    <TextView
        android:id="@+id/rd"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="klarifikasi : "
        android:textSize="10dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:id="@+id/tv_pengadaan"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengadaan Barang"
        android:textSize="10dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_marginTop="110dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/gambar_Project"
        android:background="#03D5FE"
        android:layout_marginLeft="25dp">

        <TextView
            android:id="@+id/pagu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text="Pagu : "
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvpagu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pagu"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/pagu"
            android:layout_toRightOf="@id/pagu"
            android:text="Rp.3,1 M"
            android:textSize="10dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="110dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="140dp"
        android:background="#fe2">

        <TextView
            android:id="@+id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text="Kontrak: "
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvkontrak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv11"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/tv11"
            android:layout_toRightOf="@id/tv11"
            android:text="Rp.3,1 M"
            android:textSize="10dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="110dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="250dp"
        android:background="#f83">

        <TextView
            android:id="@+id/tv_progres"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Selesai "
            android:textSize="10dp"
            android:textColor="#FFF"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>