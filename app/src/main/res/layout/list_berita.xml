<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/icon_berita"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <TextView
        android:id="@+id/judul_berita"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word Bank Mengapresiasi BIRMS"
        android:layout_toRightOf="@+id/icon_berita"
        android:textStyle="bold"
        android:textColor="#000"/>
        <ImageView
            android:id="@+id/image_berita"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/tanggal"
            android:layout_toRightOf="@+id/icon_berita"
            android:layout_below="@+id/judul_berita"/>
        <TextView
            android:id="@+id/tv_tanggal_berita"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="09 September 2018"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/judul_berita"
            android:layout_toRightOf="@id/image_berita"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_deskripsi_berita"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="3dp"
            android:text="Word Bank Mengapresiasi BIRMS ASDASDADSSADASWord Bank Mengapresiasi BIRMS ASDASDADSSADASWord Bank Mengapresiasi BIRMS ASDASDADSSADAS"
            android:textSize="10dp"
            android:layout_below="@+id/image_berita"
            android:layout_toRightOf="@id/icon_berita"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>