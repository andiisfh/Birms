<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F9FA">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/pohon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:text="Selamat Datang Di BIRSM"
                android:textColor="#FFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="32dp"
                android:padding="10dp"
                android:text="( Bandung Integrated Resources Management System )"
                android:textColor="#FFFF"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtpanjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="58dp"
                android:padding="10dp"
                android:text="@string/text_intro"
                android:textColor="#FFFF" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Recywarnahorizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="246dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="265dp"
            android:text="pengadaan Terkini : "
            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/Rl_perencanaan"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/txt"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="60dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/icon_perencanaan"
                android:layout_margin="8dp"
                android:background="@drawable/statisk"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <TextView
                android:textSize="15dp"
                android:id="@+id/tv_perencanaan"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/icon_perencanaan"
                android:text="PERENCANAAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/tv_perencanaan"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/icon_perencanaan"
                android:text="Rencana Umum Pengadaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rl_pemilihan"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/Rl_perencanaan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/icon_perencanaan"
                android:layout_margin="8dp"
                android:background="@drawable/statisk"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <TextView
                android:textSize="15dp"
                android:id="@+id/tv_perencanaan"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/icon_perencanaan"
                android:text="PERENCANAAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/tv_perencanaan"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/icon_perencanaan"
                android:text="Rencana Umum Pengadaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/Rl_pemenang"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/Rl_pemilihan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/icon_perencanaan"
                android:layout_margin="8dp"
                android:background="@drawable/statisk"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <TextView
                android:textSize="15dp"
                android:id="@+id/tv_perencanaan"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/icon_perencanaan"
                android:text="PERENCANAAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/tv_perencanaan"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/icon_perencanaan"
                android:text="Rencana Umum Pengadaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rl_Kontrak"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/Rl_pemenang"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/icon_perencanaan"
                android:layout_margin="8dp"
                android:background="@drawable/statisk"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <TextView
                android:textSize="15dp"
                android:id="@+id/tv_perencanaan"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/icon_perencanaan"
                android:text="PERENCANAAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/tv_perencanaan"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/icon_perencanaan"
                android:text="Rencana Umum Pengadaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>